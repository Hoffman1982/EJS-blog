<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h2 class="mb-0">Email Verification</h2>
        </div>
        <div class="card-body text-center">
          <div class="mb-4">
            <i class="bi bi-envelope-check" style="font-size: 4rem; color: #198754;"></i>
          </div>
          
          <h3 class="mb-3">Please check your email</h3>
          <p class="mb-4">We've sent a verification link to <strong><%= email %></strong>.</p>
          <p>Please click the link in the email to verify your account. If you don't see it, check your spam folder.</p>
          
          <div class="mt-4">
            <a href="/login" class="btn btn-primary">Back to Login</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>