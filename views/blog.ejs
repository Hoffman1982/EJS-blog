<%- include('partials/header.ejs') %>

<section class="container mt-4">
   <div class="row justify-content-center">
    <div class="col-lg-10">
        <article class="blog-post border rounded p-4 shadow-sm">
            <div class="blog-post-image mb-4 text-center">
                <img src="<%= post.image %>" alt="<%= post.title %>" class="img-fluid rounded shadow-sm">
            </div>
            <h1 class="blog-post-title mb-3 text-center fw-bold"><%= post.title %></h1>
            <div class="blog-post-meta mb-4 text-center text-muted">
                <i class="far fa-calendar" aria-hidden="true"><%= post.date %></i>

            </div>
            <div class="blog-post-content fs-5 lh-lg">
                <p><%= post.content %></p>
            </div>
            <div class="mt-5 text-center">
                <a href="/" class="btn btn-primary text-decoration-none">back to blog</a>
            </div>
        </article>
    </div>
   </div> 
</section>














